<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:id="@+id/user_search_layout"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/search_profile_image"
            android:src="@drawable/ic_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_username"
            android:text="User name"
            android:textSize="19dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toEndOf="@+id/search_profile_image" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/search_online_image"
            android:src="@drawable/ic_profile"
            app:civ_border_width="10dp"
            app:civ_border_color="@color/colorOnline"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/search_profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/search_profile_image" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintVertical_bias="0.8"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/search_offline_image"
            android:src="@drawable/ic_profile"
            app:civ_border_width="10dp"
            app:civ_border_color="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/search_profile_image"
            app:layout_constraintBottom_toBottomOf="@+id/search_profile_image" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintVertical_bias="0.8"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/search_last_message"
            android:text=""
            android:maxLines="1"
            android:textSize="19dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toEndOf="@+id/search_profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_username"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="24dp" android:layout_marginEnd="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>